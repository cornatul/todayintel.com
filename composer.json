{
    "name": "cornatul/engine",
    "type": "project",
    "description": "News Cms it's a cms that allows users to read news in a more clean way",
    "license": "MIT",
    "require": {
        "php": "^8.1",
        "cornatul/crawler": "@dev",
        "cornatul/feeds": "@dev",
        "cornatul/marketing": "@dev",
        "cornatul/news": "@dev",
        "cornatul/telegram": "@dev",
        "cornatul/social": "@dev",
        "cornatul/wordpress": "@dev",
        "crwlr/crawler": "dev-main",
        "enqueue/amqp-bunny": "^0.10.0@dev",
        "laravel/framework": "^10.0",
        "laravel/horizon": "^5.0",
        "laravel/sanctum": "^3.2",
        "laravel/tinker": "^2.8",
        "laravel/ui": "^4.0",
        "predis/predis": "^1.1",
        "league/html-to-markdown": "^5.2@dev",
        "livewire/livewire": "^2.3",
        "php-amqplib/php-amqplib": "^3.5",
        "sammyjo20/saloon-cache-plugin": "^2.0",
        "sammyjo20/saloon-laravel": "^2.0",
        "spatie/laravel-query-builder": "dev-main",
        "swiftmailer/swiftmailer": "5.x-dev",
        "symfony/dom-crawler": "6.3.x-dev",
        "vladimir-yuldashev/laravel-queue-rabbitmq": "^13.2"
    },
    "require-dev": {
        "barryvdh/laravel-debugbar": "^3.8@dev",
        "mockery/mockery": "^1.4.2",
        "phpunit/phpunit": "^9.3.3"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": false,
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"

        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ]
    },

    "repositories": [
        {
            "type": "path",
            "url": "packages/crawler"
        },
        {
            "type": "path",
            "url": "packages/feeds"
        },
        {
            "type": "path",
            "url": "packages/news"
        },
        {
            "type": "path",
            "url": "packages/marketing"
        },
        {
            "type": "path",
            "url": "packages/wordpress"
        },
        {
            "type": "path",
            "url": "packages/social"
        },
        {
            "type": "path",
            "url": "packages/telegram"
        }
    ]
}
